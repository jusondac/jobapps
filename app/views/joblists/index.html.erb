<h1>Joblists#index</h1>
<%= link_to 'new job',new_joblist_path,class:'btn btn-info'%>
<% @joblists.each do |job|%>
	<h2><%= job.title %></h2>
	<%= link_to 'readmore',joblist_path(job.id),class:'btn btn-info'%>
	<%= link_to 'edit',edit_joblist_path(job.id),class:'btn btn-info'%>
	<%= link_to 'delete',joblists_path(job.id),method:"DELETE",data: {confirm:"Delete this data?"},class:'btn btn-info'%>
	<br/>
	<% if job.status == 'available'%>
		<i style="color:green">status : <%= job.status %></i></p>
	<% else %>
		<i style="color:red">status : <%= job.status %></i></p>
	<% end %>
	<hr/>
<% end %>